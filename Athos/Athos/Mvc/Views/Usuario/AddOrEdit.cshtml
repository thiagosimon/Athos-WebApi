@model Mvc.Models.mvcUsuarioModel
@{
    ViewData["Title"] = "AddOrEdit";
}

<div class="container">
    <form id="checkout-form" class="smart-form" novalidate="novalidate">
        <h4>Cadastro de Usuário</h4>
        <fieldset>
            <div class="row">
                <section class="col col-6">
                    <label class="input">
                        <i class="icon-prepend fa fa-user"></i>
                        <input type="text" name="fname" placeholder="Nome" value="@Model.Nome">
                    </label>
                </section>
                <section class="col col-6">
                    <label class="input">
                        <i class="icon-prepend fa fa-user"></i>
                        <input type="text" name="lname" placeholder="Sobrenome" value="@Model.Sobrenome">
                    </label>
                </section>
            </div>

            <div class="row">
                <section class="col col-6">
                    <label class="input">
                        <i class="icon-prepend fa fa-paste"></i>
                        <input type="tel" name="cpf" placeholder="CPF" data-mask="999.999.999-99" value="@Model.Cpf">
                    </label>
                </section>
                <section class="col col-6">
                    <label class="input">
                        <i class="icon-prepend fa fa-phone"></i>
                        <input type="tel" name="phone" placeholder="Telefone" data-mask="(99) 99999-9999" value="@Model.Telefone">
                    </label>
                </section>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn button"/>
                <input type="reset" value="Alterar" class="btn button" />
            </div>

        </fieldset>

    </form>

</div>

@section scripts{
    <script src="~/Scripts/alertify.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.inputmask.bundle.js"></script>
}